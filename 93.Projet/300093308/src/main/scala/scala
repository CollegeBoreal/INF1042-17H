 object Main {
   def main(args: Array[String]): Unit = {

 val = tri_bulle(tableau T)
      debut
          entier longueur, i
          booleen inversion

          longueur<-taille(T)

          faire
              inversion=faux
              pour i=0 à (longueur-1)
                  si T(i)>T(i+1)
                      echanger(T,i,i+1)
                      inversion<-vrai
                  fin si
              fin pour
          tantque inversion
      fin


  tri_bulle_optimise(tableau T)
      debut
          entier longueur, i
          booleen inversion

          longueur<-taille(T)

          faire
              inversion<-faux
              pour i=0 à (longueur-1)
                  si T(i)>T(i+1)
                      echanger(T,i,i+1)
                      inversion<-vrai
                  fin si
                  longueur<-longueur-1
              fin pour
          tantque inversion
      fin

+
   }
 }